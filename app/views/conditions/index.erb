<h1 class="condition-index-page-title">All Conditions</h1>

<% @conditions.each do |condition| %>
  <div class="condition-info" id="condition_<%= condition.id %>">
    <h2><a class="condition-date" href="/conditions/<%= condition.id %>"><%= condition.measurement_date %></a></h2>
    <p><a class="button btn btn-primary" href="/conditions/<%= condition.id %>/edit">Update</a></p>
  </div>
<% end %>









