<div class="wrapper">
<h1>Create a New Station</h1>

<form action="/stations" method="post">
  <div class="form-group">
    <input type="text" class="form-control" name="station[name]" placeholder="Name" />
  </div>
  <div class="form-group">
    <input type="number" step="1" class="form-control" name="station[dock_count]" placeholder="Dock count" />
  </div>
  <div class="form-group">
    <input type="date" class="form-control" name="station[installation_date]" />
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="city" list="cities" placeholder="City" />
    <datalist id="cities"> <% @cities.each do |city| %>
      <option value="<%= city.name %>" id="<%= city.name %>"/>
      <% end %>
    </datalist>
  </div>

  <input class="btn btn-primary button" type="submit" value="Submit"/>
</div>
</form>
</div>
